<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.example</groupId>
    <artifactId>mybar</artifactId>
    <version>0.1.4</version>

    <packaging>jar</packaging> <!-- Changed packaging type to 'jar' -->

    <profiles>
        <profile>
            <id>custom-repo</id>
            <repositories>
                <repository>
                   <id>github</id>
                    <name>GitHub Packages</name>
                    <url>https://maven.pkg.github.com/pravesh-77/testing</url>
                </repository>
            </repositories>
        </profile>
    </profiles>

    <dependencies>
        <!-- Add Joda-Time dependency -->
        <dependency>
            <groupId>joda-time</groupId>
            <artifactId>joda-time</artifactId>
            <version>2.10.11</version> <!-- Use the appropriate version -->
        </dependency>

        <!-- Add other dependencies here -->
        <dependency>
            <groupId>com.ibm.server</groupId>
            <artifactId>jplugin2</artifactId>
            <version>12.0.8.0</version>
        </dependency>
        <dependency>
            <groupId>com.ibm.server</groupId>
            <artifactId>javacompute</artifactId>
            <version>12.0.8.0</version>
        </dependency>
        <dependency>
            <groupId>com.ibm.common</groupId>
            <artifactId>integrationapi</artifactId>
            <version>12.0.8.0</version>
        </dependency>
        <dependency>
            <groupId>com.example</groupId>
            <artifactId>mybar</artifactId>
            <version>0.1.4</version>
            <type>bar</type> <!-- Added type 'bar' -->
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <!-- Attach the BAR file as an artifact -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <version>3.2.0</version>
                <executions>
                    <execution>
                        <id>attach-bar</id>
                        <phase>package</phase>
                        <goals>
                            <goal>attach-artifact</goal>
                        </goals>
                        <configuration>
                            <artifacts>
                                <artifact>
                                    <file>${project.build.directory}/${project.artifactId}-${project.version}.bar</file>
                                    <type>bar</type>
                                </artifact>
                            </artifacts>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>3.1.1</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>java</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <includeProjectDependencies>false</includeProjectDependencies>
                    <includePluginDependencies>true</includePluginDependencies>
                    <mainClass>com.ibm.broker.config.appdev.FlowRendererBAR</mainClass>
                    <arguments>
                        <argument>-a</argument> <!-- Fixed space between arguments -->
                        <argument>${project.build.directory}/${project.artifactId}-${project.version}.bar</argument>
                        <argument>-k</argument> <!-- Fixed space between arguments -->
                        <argument>barfiles</argument>
                    </arguments>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <distributionManagement>
        <repository>
            <id>github</id>
            <name>GitHub Packages</name>
            <url>https://maven.pkg.github.com/pravesh-77/testing</url>
        </repository>
    </distributionManagement>
</project>
